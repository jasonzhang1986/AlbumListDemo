<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/store_bg"
    android:clipChildren="false"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/layout_left_root"
        android:layout_width="@dimen/dp_360"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:background="@drawable/shape_bg"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_35"
                android:src="@drawable/arrow_back"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_27"
                android:gravity="center_vertical"
                android:text="分类"
                android:textStyle="bold"
                android:textSize="@dimen/sp_36"
                android:textColor="#eef5f8"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_app"
            android:layout_width="@dimen/dp_365"
            android:layout_height="@dimen/dp_74"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/selector_item_bg"
            >
            <View
                android:id="@+id/space_select_app"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_74"
                android:background="@drawable/shape_left_item_select_bg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_app"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_35"
                android:src="@drawable/selector_iv_app"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="应用"
                android:textStyle="bold"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/selector_text_album"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_app"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_game"
            android:layout_width="@dimen/dp_365"
            android:layout_height="@dimen/dp_74"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/selector_item_bg"
            >
            <View
                android:id="@+id/space_select_game"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_74"
                android:background="@drawable/shape_left_item_select_bg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_game"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_35"
                android:src="@drawable/selector_iv_game"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="游戏"
                android:textStyle="bold"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/selector_text_album"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_game"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_music"
            android:layout_width="@dimen/dp_365"
            android:layout_height="@dimen/dp_74"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/selector_item_bg"
            >
            <View
                android:id="@+id/space_select_music"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_74"
                android:background="@drawable/shape_left_item_select_bg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_music"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_35"
                android:src="@drawable/selector_iv_music"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="音乐"
                android:textStyle="bold"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/selector_text_album"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_music"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_parts"
            android:layout_width="@dimen/dp_365"
            android:layout_height="@dimen/dp_74"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/selector_item_bg"
            android:nextFocusDown="@id/layout_parts"
            >
            <View
                android:id="@+id/space_select_parts"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_74"
                android:background="@drawable/shape_left_item_select_bg"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_parts"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_35"
                android:src="@drawable/selector_iv_parts"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_parts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:text="配件"
                android:textStyle="bold"
                android:textSize="@dimen/sp_26"
                android:textColor="@color/selector_text_album"
                android:duplicateParentState="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_parts"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_right_root"
        android:layout_width="@dimen/dp_1181"
        android:layout_height="match_parent"
        android:background="#33000000"
        >
        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="分类"
            android:textStyle="bold"
            android:textSize="@dimen/sp_36"
            android:textColor="#eef5f8"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_17"
            android:visibility="gone"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_sub_category"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_106"
            android:layout_marginLeft="@dimen/dp_80"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/list_sub_category"
            android:clipToPadding="false"
            android:clipChildren="false"
            >
            <me.jifengzhang.albumlistdemo.GridRecycleView
                android:id="@+id/list_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_80"
                />
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>